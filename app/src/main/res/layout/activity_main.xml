<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.codego.activitydelegate.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSecond"
        android:text="open Second"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSecondWithExtra"
        android:text="open second with extra"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSecondWithAnimation"
        android:text="open second with animation"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSecondWithAction"
        android:text="open second with action"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSecondWithShareView"
        android:transitionName="share"
        android:text="open second with share view"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSecondWithCallback"
        android:text="open second with callback"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/icon_img"
        android:transitionName="icon"
        android:layout_width="match_parent"
        android:src="@mipmap/ic_launcher"
        android:layout_height="100dp"/>

</LinearLayout>
